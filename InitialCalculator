#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL,"Portuguese");

    int valor1, valor2, resultado;
    printf("Digite o primeiro valor: ");
    scanf("%d", &valor1);

    printf("Digite o segundo valor: ");
    scanf("%d", &valor2);

    resultado = valor1 + valor2;
    printf("A soma dos valores Ã©: %d", resultado);

    return 0;
}
